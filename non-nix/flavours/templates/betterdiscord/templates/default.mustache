@import url("https://nyri4.github.io/Couve/betterdiscord/app.css");

/* Settings */
:root {
  --version: "2.3.0";

  /* Colors */
  --main-color: #{{base0F-hex}};

  /* Borders */
  --avatar-radius: 5px;
}

/* Dark/Light vars */
.theme-dark {
  /* BGs */
  --background-primary: #{{base00-hex}};
  --background-secondary: #{{base01-hex}};
  --background-secondary-alt: #{{base02-hex}};
  --background-secondary-alt-alt: #{{base04-hex}};
  --background-tertiary: #{{base00-hex}};

  --deprecated-store-bg: var(--background-primary);
  --background-floating: var(--background-secondary);
  --background-mobile-primary: var(--background-primary);
  --activity-card-background: var(--background-secondary);
  --input-background: var(--background-secondary);
  --modal-background: var(--background-primary);

  --colortransparency: #0003;

  /* Cards */
  --card: #{{base03-hex}};

  /* Other stuff */
  --textcolor: #{{base05-hex}};
  --epicshadow1: #fff3;

  /* Font */
  --font-display: var(--font-primary) !important;
}

.theme-light {
  /* BGs */
  --background-primary: #{{base00-hex}};
  --background-secondary: #{{base01-hex}};
  --background-secondary-alt: #{{base02-hex}};
  --background-secondary-alt-alt: #{{base04-hex}};
  --background-tertiary: #{{base06-hex}};

  --deprecated-store-bg: var(--background-primary);
  --background-floating: var(--background-secondary);
  --background-mobile-primary: var(--background-primary);
  --activity-card-background: var(--background-secondary);
  --input-background: var(--background-secondary);
  --modal-background: var(--background-primary);

  --colortransparency: #0003;

  /* Cards */
  --card: #{{base03-hex}};

  /* Other stuff */
  --textcolor: #{{base05-hex}};
  --epicshadow1: #fff3;

  /* Font */
  --font-display: var(--font-primary) !important;
}
